{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // CRITICAL FIX: Turn this OFF to allow 'import' syntax in CommonJS
    "verbatimModuleSyntax": false,
    "rootDir": "./"
  },
  "include": ["src/**/*"]
}